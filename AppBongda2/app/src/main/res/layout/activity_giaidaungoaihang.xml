<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5F5"
    tools:context=".Ranking">

    <TextView
        android:id="@+id/textView6"
        android:layout_width="408dp"
        android:layout_height="67dp"
        android:text="Các giải đấu"
        android:textAlignment="center"
        android:paddingTop="15dp"
        android:textColor="#547672"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="394dp"
        android:layout_height="29dp"
        android:layout_marginTop="28dp"
        android:text="Giai Đấu Nỏng Bỏng"
        android:textColor="#547672"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.47"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="400dp"
        android:layout_height="600dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8">

        <LinearLayout
            android:id="@+id/DetailTay"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/white_background"

            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/detailDuc">

            <ImageView
                android:id="@+id/anh10"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/img_23" />

            <TextView
                android:id="@+id/chu10"
                android:layout_width="231dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingTop="30dp"
                android:text="giải đấu La Liga"
                android:textAlignment="center"
                android:textColor="#547672"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/detailDuc"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/white_background"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/detailPhap">

            <ImageView
                android:id="@+id/anh11"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/img_22" />

            <TextView
                android:id="@+id/chu11"
                android:layout_width="231dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingTop="30dp"
                android:text="giải đấu Bundesliga"
                android:textAlignment="center"
                android:textColor="#547672"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/detailAnh"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/white_background"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/img_20" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="231dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingTop="30dp"
                android:text="giải đấu Premier League"
                android:textAlignment="center"
                android:textColor="#547672"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/detailPhap"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/white_background"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/detailAnh">

            <ImageView
                android:id="@+id/anh12"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/img_21" />

            <TextView
                android:id="@+id/chu12"
                android:layout_width="231dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingTop="30dp"
                android:text="giải đấu League 1"
                android:textAlignment="center"
                android:textColor="#547672"
                android:textSize="20dp" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>